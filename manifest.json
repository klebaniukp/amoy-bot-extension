{
  "manifest_version": 3,
  "name": "Polygon Faucet Automation",
  "version": "1.0",
  "permissions": ["activeTab", "offscreen", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://faucet.polygon.technology/*"],
      "js": ["popup.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}

